{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/productNew.json",
  "type": "object",
  "properties": {
    "sku": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "productName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "description": {
      "type": "string"
    },
    "price": {
      "type": "number",
      "minimum": 0
    },
    "quantityAvailable": {
      "type": "integer",
      "minimum": 0
    }
  },
  "additionalProperties": false,
  "required": ["sku", "productName", "price", "quantityAvailable"]
}
