{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/customerSearch.json",
  "type": "object",
  "properties": {
    "customerName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "phone": {
      "type": "string",
      "pattern": "^(\\(\\d{3}\\)|\\d{3})[-.\\s]?\\d{3}[-.\\s]?\\d{4}$",
      "maxLength": 20
    }
  },
  "additionalProperties": false,
  "required": []
}
