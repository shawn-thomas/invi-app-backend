{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/invoiceNew.json",
    "type": "object",
    "properties": {
      "invoice_id": {
        "type": "integer"
      },
      "customer_handle": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "invoice_date": {
        "type": "string",
        "format": "date"
      },
      "total_amount": {
        "type": "number",
        "minimum": 0
      },
      "status": {
        "type": "string",
        "enum": ["pending", "paid"]
      },
      "items": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "sku": {
              "type": "string",
              "minLength": 1,
              "maxLength": 25
            },
            "quantity": {
              "type": "integer",
              "minimum": 0
            },
            "unit_price": {
              "type": "number",
              "minimum": 0
            }
          },
          "required": ["sku", "quantity", "unit_price"],
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false,
    "required": ["invoice_id", "customer_handle", "invoice_date", "total_amount", "status", "items"]
  }
