{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/invoiceSearch.json",
    "type": "object",
    "properties": {
      "customer_handle": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "invoice_date": {
        "type": "string",
        "format": "date"
      },
      "total_amount": {
        "type": "number",
        "minimum": 0
      },
      "status": {
        "type": "string",
        "minLength": 1,
        "maxLength": 20
      },
      "item_sku": {
        "type": "string",
        "minLength": 1,
        "maxLength": 25
      },
      "item_quantity": {
        "type": "integer",
        "minimum": 0
      },
      "item_unit_price": {
        "type": "number",
        "minimum": 0
      }
    },
    "additionalProperties": false,
    "required": []
  }
